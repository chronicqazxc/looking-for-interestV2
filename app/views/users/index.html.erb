<div class="panel-heading"><h3>Stores</h3></div>
<div class="container-fluid">
<table class="table table-condensed table-hover">
  <tr>
  	<th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <div>
        <%= link_to "Show", user, :class => "btn btn-primary" %>
        <%= link_to "Edit", edit_user_path(user), :class => "btn btn-warning"  %>
        <%= link_to "Destroy", user, :class => "btn btn-danger", :confirm => 'Are you sure?', :method => :delete %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
</div>
<div class="panel-footer">
	<%= link_to "Add", new_user_path, :class => "btn btn-link" %>
</div>